{
  "name": "crmpexe",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:api": "turbo run dev --filter=crmpexe-api",
    "dev:web": "turbo run dev --filter=crmpexe-web",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prisma:generate": "turbo run prisma:generate --filter=crmpexe-api",
    "prisma:migrate": "turbo run prisma:migrate --filter=crmpexe-api",
    "prisma:migrate:dev": "turbo run prisma:migrate:dev --filter=crmpexe-api"
  },
  "devDependencies": {
    "turbo": "^2.0.9",
    "prettier": "^3.0.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@9.0.0"
}
